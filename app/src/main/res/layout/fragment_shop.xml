<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ListView
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:id="@+id/lv_list_shop"></ListView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_10"
            android:src="@drawable/cricle_no"
            android:id="@+id/iv_img_shop"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_10"
            android:textSize="@dimen/sp_20"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv_img_shop"
            android:id="@+id/tv_text_shop"
            android:text="全选"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_20"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_10"
            android:id="@+id/tv_priceAll_shop"
            android:layout_toRightOf="@id/tv_text_shop"
            android:layout_centerVertical="true"
            android:text="合计：00.00"/>
        <RelativeLayout
            android:layout_width="@dimen/dp_120"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@color/colorAccent"
            >
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="去结算"
                    android:textSize="@dimen/sp_20"
                    android:textColor="@color/colorffffff"
                    android:id="@+id/tv_jisuan_shop"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(0)"
                    android:id="@+id/tv_num_shop"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/tv_jisuan_shop"
                    android:textColor="@color/colorffffff"/>
            </RelativeLayout>

        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>